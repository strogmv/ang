package emailtemplates

import (
	"bytes"
	"fmt"
	"text/template"
)

type Template struct {
	Subject string
	Text    string
	HTML    string
}

var Templates = map[string]Template{
{{- range . }}
	"{{ .Name }}": {
		Subject: {{ Quote .Subject }},
		Text:    {{ Quote .Text }},
		HTML:    {{ Quote .HTML }},
	},
{{- end }}
}

func Render(name string, data any) (Template, error) {
	tpl, ok := Templates[name]
	if !ok {
		return Template{}, fmt.Errorf("unknown email template: %s", name)
	}
	subject, err := renderString(tpl.Subject, data)
	if err != nil {
		return Template{}, err
	}
	text, err := renderString(tpl.Text, data)
	if err != nil {
		return Template{}, err
	}
	html, err := renderString(tpl.HTML, data)
	if err != nil {
		return Template{}, err
	}
	return Template{Subject: subject, Text: text, HTML: html}, nil
}

func renderString(tpl string, data any) (string, error) {
	if tpl == "" {
		return "", nil
	}
	t, err := template.New("email").Option("missingkey=zero").Parse(tpl)
	if err != nil {
		return "", err
	}
	var buf bytes.Buffer
	if err := t.Execute(&buf, data); err != nil {
		return "", err
	}
	return buf.String(), nil
}
