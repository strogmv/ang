import { create } from 'zustand';
import { persist } from 'zustand/middleware';
{{- if HasEntity "User" }}
import type * as Types from './types';
{{- end }}

interface AuthState {
  token: string | null;
  refreshToken: string | null;
  user: {{ if HasEntity "User" }}Types.User | null{{ else }}any | null{{ end }};
  setAuth: (token: string, user: {{ if HasEntity "User" }}Types.User{{ else }}any{{ end }}, refreshToken?: string) => void;
  clearAuth: () => void;
  isAuthenticated: () => boolean;
}

export const useAuthStore = create<AuthState>()(
  persist(
    (set, get) => ({
      token: null,
      refreshToken: null,
      user: null,
      setAuth: (token, user, refreshToken = null) =>
        set({
          token,
          user,
          refreshToken,
        }),
      clearAuth: () =>
        set({
          token: null,
          refreshToken: null,
          user: null,
        }),
      isAuthenticated: () => !!get().token,
    }),
    {
      name: 'auth-storage',
    }
  )
);
