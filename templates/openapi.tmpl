openapi: 3.0.3
info:
  title: {{ .Title }}
  version: {{ .Version }}
  x-ang-version: {{ .ANGVersion }}
  x-ang-input-hash: {{ .InputHash }}
  x-ang-compiler-hash: {{ .CompilerHash }}
paths:
{{- range .Endpoints }}
  {{- $m := .Endpoint.Method | Lower }}
  {{ .Endpoint.Path }}:
    {{ $m }}:
      summary: {{ .Endpoint.RPC }}
      {{- if .Endpoint.Description }}
      description: {{ .Endpoint.Description }}
      {{- end }}
      operationId: {{ .Endpoint.RPC }}
      {{- if eq $m "get" }}
      {{- if or .Endpoint.Pagination (gt (len .Input.Fields) 0) }}
      {{- $ep := .Endpoint }}
      parameters:
        {{- range .Input.Fields }}
        {{- if and $ep.Pagination (or (eq .Name "limit") (eq .Name "offset") (eq .Name "cursor")) }}
        {{- else }}
        - in: query
          name: {{ .Name | ToLower }}
          {{- if IsRequiredField . }}
          required: true
          {{- end }}
          schema:
            type: {{ OpenAPIType .Type }}
            {{- if OpenAPIFieldFormat . }}
            format: {{ OpenAPIFieldFormat . }}
            {{- else if OpenAPIFormat .Type }}
            format: {{ OpenAPIFormat .Type }}
            {{- end }}
            {{- range OpenAPIRules . }}
            {{ . }}
            {{- end }}
        {{- end }}
        {{- end }}
        {{- if .Endpoint.Pagination }}
        {{- if eq .Endpoint.Pagination.Type "offset" }}
        - in: query
          name: limit
          schema:
            type: integer
            {{- if gt .Endpoint.Pagination.MaxLimit 0 }}
            maximum: {{ .Endpoint.Pagination.MaxLimit }}
            {{- end }}
            {{- if gt .Endpoint.Pagination.DefaultLimit 0 }}
            default: {{ .Endpoint.Pagination.DefaultLimit }}
            {{- end }}
        - in: query
          name: offset
          schema:
            type: integer
        {{- else if eq .Endpoint.Pagination.Type "cursor" }}
        - in: query
          name: cursor
          schema:
            type: string
        - in: query
          name: limit
          schema:
            type: integer
            {{- if gt .Endpoint.Pagination.MaxLimit 0 }}
            maximum: {{ .Endpoint.Pagination.MaxLimit }}
            {{- end }}
            {{- if gt .Endpoint.Pagination.DefaultLimit 0 }}
            default: {{ .Endpoint.Pagination.DefaultLimit }}
            {{- end }}
        {{- end }}
        {{- end }}
      {{- end }}
      {{- end }}
      {{- $m := .Endpoint.Method | Lower }}
      {{- if and (ne $m "get") (ne $m "ws") }}
      {{- if .Input.Name }}
      requestBody:
        required: true
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/{{ .Input.Name }}'
      {{- end }}
      {{- end }}
      {{- if .Endpoint.CacheTTL }}
      x-cache-ttl: {{ .Endpoint.CacheTTL }}
      {{- end }}
      {{- if .Endpoint.RateLimit }}
      x-rate-limit:
        rps: {{ .Endpoint.RateLimit.RPS }}
        burst: {{ .Endpoint.RateLimit.Burst }}
      {{- end }}
      {{- if .Endpoint.Idempotency }}
      x-idempotency: true
      {{- end }}
      responses:
        '200':
          description: OK
        {{- if and .Endpoint.RPC (ne $m "ws") }}
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/{{ .Output.Name }}'
        {{- end }}
        '401':
          description: Unauthorized
        '400':
          description: Bad Request
          content:
            application/problem+json:
              schema:
                $ref: '#/components/schemas/ProblemDetail'
        {{- range .ErrorDefs }}
        '{{ .HTTPStatus }}':
          description: {{ .Message }}
          content:
            application/problem+json:
              schema:
                $ref: '#/components/schemas/ProblemDetail'
        {{- end }}
      {{- if eq .Endpoint.AuthType "jwt" }}
      security:
        - bearerAuth: []
      {{- end }}
{{- end }}

components:
  schemas:
    ProblemDetail:
      type: object
      properties:
        type:
          type: string
        title:
          type: string
        status:
          type: integer
        detail:
          type: string
        instance:
          type: string
        code:
          type: integer
        errors:
          type: object
{{- range .Schemas }}
    {{ .Name }}:
      type: object
      properties:
      {{- range .Fields }}
        {{ .Name | ToLower }}:
          type: {{ OpenAPIType .Type }}
          {{- if OpenAPIFormat .Type }}
          format: {{ OpenAPIFormat .Type }}
          {{- end }}
          {{- if IsArray .Type }}
          items:
            type: {{ OpenAPIType (OpenAPIItemsType .Type) }}
            {{- if OpenAPIFormat (OpenAPIItemsType .Type) }}
            format: {{ OpenAPIFormat (OpenAPIItemsType .Type) }}
            {{- end }}
          {{- end }}
          {{- range OpenAPIRules . }}
          {{ . }}
          {{- end }}
      {{- end }}
      {{- $req := OpenAPIRequiredFields . }}
      {{- if gt (len $req) 0 }}
      required:
      {{- range $req }}
        - {{ . }}
      {{- end }}
      {{- end }}
{{- end }}
  securitySchemes:
    bearerAuth:
      type: http
      scheme: bearer
      bearerFormat: JWT
