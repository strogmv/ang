func (c *Client) Publish{{ . }}(ctx context.Context, event domain.{{ ExportName . }}) error {
	data, err := json.Marshal(event)
	if err != nil {
		return err
	}
	
	msg := natspkg.NewMsg("{{ . }}")
	msg.Data = data
	
	// Propagate Trace Context (Stage 43)
	if tp, ok := ctx.Value("traceparent").(string); ok {
		msg.Header.Set("traceparent", tp)
	} else if tp := ctx.Value("trace_id"); tp != nil {
		msg.Header.Set("trace_id", fmt.Sprint(tp))
	}

	return c.nc.PublishMsg(msg)
}

func (c *Client) Subscribe{{ . }}(handler func(context.Context, domain.{{ ExportName . }}) error) (*natspkg.Subscription, error) {
	return c.nc.Subscribe("{{ . }}", func(msg *natspkg.Msg) {
		var event domain.{{ ExportName . }}
		if err := json.Unmarshal(msg.Data, &event); err != nil {
			return
		}
		
		// Reconstruct context with trace data
		ctx := context.Background()
		if tp := msg.Header.Get("traceparent"); tp != "" {
			ctx = context.WithValue(ctx, "traceparent", tp)
		}
		
		_ = handler(ctx, event)
	})
}
